<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appetite">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".ChefRegister"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".MenuList"
            android:label="@string/title_activity_menulist" />
        <activity android:name=".ReviiewList" />
        <activity android:name=".AddReviewActivity" />
        <activity
            android:name=".Menu"
            android:label="@string/title_activity_menu" />
        <activity
            android:name=".ChefMenuItemActivity"
            android:label="@string/title_activity_chef_menu_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChefMenulist"
            android:label="@string/title_activity_chef_menulist" />
        <activity
            android:name=".ChefMenulistAdapter"
            android:label="@string/title_activity_chef_menulist_adapter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChefMenuInfo"
            android:label="@string/title_activity_chef_menu_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CustomerRegister"
            android:label="@string/title_activity_customer_register" />
        <activity
            android:name=".ChefProfile"
            android:label="@string/title_activity_chef_profile" />
        <activity
            android:name=".ChefsEnrolledActivity"
            android:label="@string/title_activity_chefs_enrolled" />
        <activity
            android:name=".ChefsEnrolledListAdapter"
            android:label="@string/title_activity_chefs_enrolled_list_adapter" />
        <activity
            android:name=".DishDetailsActivity"
            android:label="@string/title_activity_dish_details"
            ></activity>
    </application>

</manifest>
