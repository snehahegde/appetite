<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.appetite.ChefsEnrolledListAdapter"
    tools:showIn="@layout/activity_chefs_enrolled_list_adapter">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_weight="2"
        android:id="@+id/chef_pic" />

     <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:padding="3dp"
                    android:text="chefs_name"
                    android:id="@+id/chefsName"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    style="@style/foodRatingBarForAddRev"
                    android:id="@+id/ratingBar3" />


            </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:padding="3dp"
            android:text="distance"
            android:layout_marginLeft="115dp"
            android:layout_weight="1"
            android:id="@+id/distance"
            android:layout_marginTop="10dp" />

        </LinearLayout>

</LinearLayout>
